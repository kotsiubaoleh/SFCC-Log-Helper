{
    "name": "SFCC Log helper",
    "version": "1.0",
    "description": "Extension that helps to manage SFCC logs",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action" : {
        "default_title": "SFCC Log Helper",
        "default_popup": "popup.html"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://*.demandware.net/",
        "http://*.demandware.net/",
        "tabs"
    ],
    "manifest_version": 2
}

